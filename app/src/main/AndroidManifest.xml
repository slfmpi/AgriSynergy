<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgriSynergy"
        tools:targetApi="31">

        <!-- Declare UserProfileActivity as the main entry point -->
        <activity
            android:name=".UserProfileActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Set exported=false for activities without intent filters -->
        <activity
            android:name=".EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".OrderHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".DropshipperCatalogActivity"
            android:exported="false" />
        <activity
            android:name=".DropshipperCatalog2Activity"
            android:exported="false" />
        <activity
            android:name=".PostingActivity"
            android:exported="false" />
        <activity
            android:name=".TambahPostinganActivity"
            android:exported="false" />
        <activity
            android:name=".MyFavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".MyFavorite2Activity"
            android:exported="false" />
        <activity
            android:name=".AddDiscountCodeActivity"
            android:exported="false" />
        <activity
            android:name=".DoneCheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".StartSellingActivity"
            android:exported="false" />
    </application>

</manifest>
